<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item><shape>

            <!-- Under stroke sektionen sættes der en tykkelses og en farve på kanten-->
            <stroke android:width="2dp" android:color="#707070" />

            <solid android:color="@android:color/white"/> <!-- Sætter baggrundsfarve hvid -->
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />

            <!-- Tilføjer runde hjørner til firkantet spinner/box/knap -->
            <corners android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>

        </shape></item>


        <!--    Viser et ikon, til categorySpin, kode udkommenteret in case vi skal bruge den.
        item >
            <bitmap android:gravity="right|center" android:src="@drawable/ic_spinner" />
         </item>
         -->
    </layer-list></item>
</selector>